[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = auto
[gc]
	auto = 1
[merge]
	summary = true
[alias]
	co = checkout
	ci = commit -v
	st = status
	cp = cherry-pick -x
	rb = rebase
	pr = pull --rebase
	br = branch
	b = branch -v
	r = remote -v
	t = tag -l
	put = push origin HEAD
	unstage = reset HEAD
	uncommit = reset --soft HEAD^
	recommit = commit -C head --amend
	d = diff
	c = commit -v
	s = status
	dc = diff --cached
	pr = pull --rebase
	ar = add -A
	lg = log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %s %C(bold)- %an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative
	l = log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %s %C(bold)- %an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative -10
[push]
	default = simple
[user]
	name = Dan Parks + Gary Johnson
	email = developer@leandog.com
[core]
	editor = vim
